# Document Builder Platform - Environment Configuration
# Copy this file to .env and update values for your environment
# DO NOT commit .env to version control

# =============================================================================
# Service Ports
# =============================================================================
# Content Intake Service
CONTENT_INTAKE_PORT=8001

# Gestalt Design Engine
GESTALT_ENGINE_PORT=8002

# Document Formatter Service
DOCUMENT_FORMATTER_PORT=8003

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
# Production database
POSTGRES_USER=docbuilder
POSTGRES_PASSWORD=changeme
POSTGRES_DB=document_builder
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL (alternative to individual components)
DATABASE_URL=postgresql://docbuilder:changeme@localhost:5432/document_builder

# Test database (for running tests)
TEST_DATABASE_URL=postgresql://docbuilder:changeme@localhost:5432/document_builder_test

# =============================================================================
# Service URLs (for inter-service communication)
# =============================================================================
# Content Intake Service
CONTENT_INTAKE_URL=http://localhost:8001/v1/intake

# Gestalt Design Engine
GESTALT_ENGINE_URL=http://localhost:8002/v1

# Document Formatter Service
DOCUMENT_FORMATTER_URL=http://localhost:8003/v1

# =============================================================================
# Content Intake Service Configuration
# =============================================================================
CONTENT_INTAKE_SERVICE_NAME=content-intake-service
CONTENT_INTAKE_SERVICE_VERSION=1.0.0
CONTENT_INTAKE_LOG_LEVEL=INFO

# CORS origins (comma-separated)
CONTENT_INTAKE_CORS_ORIGINS=*

# Object storage
STORAGE_BUCKET=document-builder-assets

# Rate limiting
MAX_REQUESTS_PER_MINUTE=30

# =============================================================================
# Gestalt Design Engine Configuration
# =============================================================================
GESTALT_SERVICE_NAME=gestalt-design-engine
GESTALT_SERVICE_VERSION=1.0.0
GESTALT_LOG_LEVEL=INFO

# CORS origins (comma-separated)
GESTALT_CORS_ORIGINS=*

# AI/LLM configuration (disabled for v1)
AI_MODE_ENABLED=false
OPENAI_API_KEY=

# =============================================================================
# Document Formatter Service Configuration
# =============================================================================
FORMATTER_SERVICE_NAME=document-formatter-service
FORMATTER_SERVICE_VERSION=1.0.0
FORMATTER_LOG_LEVEL=INFO

# CORS origins (comma-separated)
FORMATTER_CORS_ORIGINS=*

# =============================================================================
# User Agent Configuration
# =============================================================================
USER_AGENT_SERVICE_NAME=user-agent
USER_AGENT_SERVICE_VERSION=1.0.0

# Workflow settings
MAX_POLL_ATTEMPTS=30
POLL_INTERVAL_SECONDS=2.0

# =============================================================================
# Redis Configuration (for caching and queues)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Development Settings
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Security Settings
# =============================================================================
# Secret key for JWT tokens and session management
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# JWT token expiration (in seconds)
JWT_EXPIRATION=3600

# API key for service-to-service authentication
API_KEY=

# =============================================================================
# Monitoring and Observability
# =============================================================================
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Jaeger tracing
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# =============================================================================
# Docker Compose Settings
# =============================================================================
# Used when running with docker-compose
COMPOSE_PROJECT_NAME=document-builder
